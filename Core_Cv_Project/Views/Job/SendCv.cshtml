@{
    Layout = null;
}

<div class="col-lg-6">
    <div class="contact-us-content">
        <form id="contact-form" action="/Job/SendCv" method="post">
            <div class="row">
                <input type="text" name="Job" id="Job" placeholder="ıd" autocomplete="on"required />
                <div class="col-lg-12">  
                   
                    <fieldset>
                        <input type="text" name="Name" id="name" placeholder="Adınız" autocomplete="on" required>
                    </fieldset>
                </div>           
                <div class="col-lg-12">
                    <fieldset>
                        <input type="text" name="SurName" id="name" placeholder="Soyadınız" autocomplete="on" required>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <input type="text" name="Content" id="content" placeholder="Eklemek istedikleriniz" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <textarea name="Cv" id="Cv" placeholder="Cv yolu"></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <button type="submit" id="form-submit" class="orange-button">Kaydet</button>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>