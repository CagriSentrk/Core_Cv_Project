@{
    Layout = null;
}

<div class="col-lg-6">
    <div class="contact-us-content">
        <form id="contact-form" action="/Job/SendCv" method="post">
            <div class="row">
                <input type="hidden" name="Job_Id" id="Job" placeholder="ıd" autocomplete="on" required value="@ViewBag.v2" />
                <div class="col-lg-12">

                    <fieldset>
                        <input type="text" name="Name" id="name" placeholder="Adınız" autocomplete="on" required>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <input type="text" name="SurName" id="name" placeholder="Soyadınız" autocomplete="on" required>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <input type="text" name="Content" id="content" placeholder="Eklemek istedikleriniz" required="">
                    </fieldset>
                </div>
                <div class="form-group">
                    <label for="file">Dosya Yükle</label>
                    <input type="file" class="form-control-file" name="file" id="file">
                </div>


                <div class="col-lg-12">
                    <fieldset>
                        <button type="submit" id="form-submit" class="orange-button">Kaydet</button>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>